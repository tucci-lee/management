<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.tucci.management.model.dao.task.TaskScheduleMapper" >
  <resultMap id="BaseResultMap" type="cn.tucci.management.model.domain.task.TaskSchedule" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="class_name" property="className" jdbcType="VARCHAR" />
    <result column="cron" property="cron" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="INTEGER" />
    <result column="remarks" property="remarks" jdbcType="VARCHAR" />
    <result column="creator" property="creator" jdbcType="BIGINT" />
    <result column="create_time" property="createTime" jdbcType="BIGINT" />
    <result column="updater" property="updater" jdbcType="BIGINT" />
    <result column="updated_time" property="updatedTime" jdbcType="BIGINT" />
    <result column="is_deleted" property="isDeleted" jdbcType="BIT" />
  </resultMap>
    <resultMap id="DtoResultMap" type="cn.tucci.management.model.dto.TaskScheduleDTO" extends="BaseResultMap">
    </resultMap>
  <sql id="Base_Column_List" >
    id, name, class_name, cron, type, remarks, creator, create_time, updater, updated_time,
    is_deleted
  </sql>
  <select id="selectPage" resultMap="DtoResultMap">
SELECT
	id, `name`, class_name, cron, `type`, remarks, creator, create_time, updater, updated_time
FROM
	task_schedule
WHERE
    is_deleted = FALSE
    <if test="query.name != null and query.name != ''">
      AND `name` = #{query.name}
    </if>
    <if test="query.type != null">
      AND type = #{query.type}
    </if>
    <if test="query.status != null and query.status == 1">
      AND id IN (
      <foreach collection="query.ids" item="id" separator=",">
        #{id}
      </foreach>
      )
    </if>
    <if test="query.status != null and query.status == 2">
      AND id NOT IN (
      <foreach collection="query.ids" item="id" separator=",">
        #{id}
      </foreach>
      )
    </if>
  </select>
</mapper>